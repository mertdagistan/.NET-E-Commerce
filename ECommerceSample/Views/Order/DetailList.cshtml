
@using ECommerce.Entity
@model IEnumerable<OrderDetail>
@{
    ViewBag.Title = "DetailList";
    Layout = "~/Views/Shared1/_UserLayout.cshtml";
}

<div class="main-container container">
    <ul class="header-main ">
        <li class="home"><a href="#">Home   </a><i class="fa fa-angle-right" aria-hidden="true"></i></li>
        <li> Shopping Cart</li>
    </ul>
    <div class="row">
        <!--Middle Part Start-->
        <div id="content" class="col-sm-12">
            <h2 class="title">Shopping Cart</h2>
            <div class="table-responsive form-group">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td class="text-center">Image</td>
                            <td class="text-left">Product Name</td>
                            <td class="text-left">Quantity</td>
                            <td class="text-right">Total</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OrderDetail item in Model)
                        {
                        <tr>
                            <td class="text-center"><a href="~/Home/Detail/@item.ProductId"><img width="70" src="~/Upload/@item.Product.Photo" alt="" title="" class="img-thumbnail"></a></td>
                            <td class="text-left">
                                <a href="~/Home/Detail/@item.ProductId">@item.Product.ProductName</a><br>
                            </td>
                            <td class="text-left" width="200px">
                                <div class="input-group btn-block quantity">
                                    <input type="text" name="quantity" value="@item.Quantity" size="1" class="form-control">
                                    <span class="input-group-btn">
                                        <a href="~/Order/Delete/@item.ProductId"  title="" class="btn btn-danger" ><i class="fa fa-times-circle"></i></a>
                                    </span>
                                </div>
                            </td>
                            <td class="text-right">@item.Price.Value.ToString("C0")</td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
           
            
            

            <div class="row">
                <div class="col-sm-4 col-sm-offset-8">
                    <table class="table table-bordered">
                        <tbody>
                            @{

                                Order o = (Order)Session["Order"];
                                                        <tr>
                                                            <td class="text-right">
                                                                <strong>Total:</strong>
                                                            </td>
                                                            <td class="text-right">@o.TotalPrice.Value.ToString("C0")</td>
                                                        </tr>

                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="buttons">
                <div class="pull-left"><a href="~/Home/Index" class="btn btn-primary">Continue Shopping</a></div>
                <div class="pull-right"><a href="~/Payment/Pay" class="btn btn-primary">Checkout</a></div>
            </div>
        </div>
        <!--Middle Part End -->

    </div>
</div>

